@model Lemon_WebApp.Models.GameModel

@{
    Layout = "_MittLayout";
    ViewData["Title"] = "Game Configuration";
}

<html>
<head>
    <title>LudoGameApple</title>
    <link href="~/css/GameConfigurationStyle.css" rel="stylesheet" type="text/css" />
</head>
<body>
    
    <br /><br />
          <div class="form-addPlayer">
              @using (Html.BeginForm("AddPlayer", "Ludo", FormMethod.Post))
              {
                  <h4>Add player</h4>
                  //<input placeholder="Name" type="text" name="nameOfPlayer" required pattern="[a-zA-ZäöüßÄÖÜ]+" title="Only letters" />
                  <input type="text" placeholder="Write name" maxlength="15" required pattern="[a-zA-ZäöüßÄÖÜ]+" title="Only letters" />
                  <input type="hidden" name="gameId" value="@Model.gameId">
                  <select name="playerColor" id="playerColor">
                      <option value="Blue">Blue</option>
                      <option value="Yellow">Yellow</option>
                      <option value="Red">Red</option>
                      <option value="Green">Green</option>
                  </select>
                  <input value="Add player" type="submit">
              }
          </div>


    <p>
        @if (Model.numberOfPlayers > 0)
        {
            for (int i = 0; i < Model.ludoPlayers.Count; i++)
            {

                string playerColor = "";

                if (Model.ludoPlayers[i].playerColor == 0)
                {
                    playerColor = "blue";
                }
                if (Model.ludoPlayers[i].playerColor == 1)
                {
                    playerColor = "yellow";
                }
                if (Model.ludoPlayers[i].playerColor == 2)
                {
                    playerColor = "red";
                }
                if (Model.ludoPlayers[i].playerColor == 3)
                {
                    playerColor = "green";
                }
                <div>
                    Name: <b>@Model.ludoPlayers[i].name</b> was added with color: <font color="@playerColor">@playerColor</font>
                </div>
            }
        }
    </p>

    <br /><br />

    <div>
        <form action="@Url.Action("GameBoardNewGame", "Ludo")">
            <input value="Go to gameboard" type="submit">
            <input type="hidden" name="gameId" value="@Model.gameId">
        </form>
    </div>

</body>
</html>
